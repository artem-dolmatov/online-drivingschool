<div class="form-group">

    <%= render 'admin/_portlets/_tags/_label/default', field: field %>

    <div class="col-md-9">
        <div class="bs-component field">
            <!-- FIELD -->
            <%= f.select eval(":#{field[:machine]}"),
                         options_for_select( eval("data.#{field[:machine]}#{( field[:map].length > 0 ? field[:map] : '' )}"),
                                             eval("data.#{field[:machine]}#{( field[:map].length > 0 ? field[:map] : '' )}") ),
                         {},
                         {:multiple => field[:options][:multiple], :class => 'form-control admin-form__select2-multiple__tag', :data => {:placeholder => field[:options][:prompt], :tag => true}} %>

            <!-- TOOLTIP TEXT -->
            <% if field[:options][:tooltip_text] %>
                <b class="tooltip tip-left-top"><em> <%= field[:options][:tooltip_text] %> </em></b>
            <% end %>

            <!-- HELP TEXT -->
            <% if field[:options][:help_text] %>
                <span class="help-block mt5 mbn">&nbsp;<i class="fa fa-info-circle"></i> <%= raw field[:options][:help_text] %> </span>
            <% end %>
        </div>
    </div>
</div>