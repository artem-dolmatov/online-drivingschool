<% if data.errors.any? %>
    <div id="error_explanation">
        <h2><%= I18n.t('validate_errors.error', count: data.errors.count) %></h2>

        <ul>
            <% data.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>